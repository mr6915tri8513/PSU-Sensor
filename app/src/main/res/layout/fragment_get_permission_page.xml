<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".set_wifi.view_pager.GetPermissionPage">

    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_pinched_finger"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/request_permission"
        android:textColor="@color/text_color"
        android:textSize="@dimen/category_name"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/allow_permission_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_permission"
        android:layout_marginTop="20dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>